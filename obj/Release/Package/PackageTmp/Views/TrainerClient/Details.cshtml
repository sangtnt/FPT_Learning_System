@model FPT_Learning_System.Models.ApplicationUser

@{
    ViewBag.Title = "Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h3>@ViewBag.Title</h3>
<div class="row">
    <div class="col-md-3">

        <!-- Profile Image -->
        <div class="card card-primary card-outline">
            <div class="card-body box-profile">
                <div class="text-center">
                    <img class="profile-user-img img-fluid img-circle" src="@Model.Avartar"
                         alt="User profile picture">
                </div>

                <h3 class="profile-username text-center">
                    @Model.FirstName @Model.LastName
                </h3>

                <p class="text-muted text-center">Birthday: @Model.DateOfBirth.ToString("dd MMMM yyyy")</p>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
        <!-- About Me Box -->
        <!-- /.card -->
    </div>
    <div class="card card-primary col-md-9">
        <div class="card-header">
            <h3 class="card-title">Information</h3>
        </div>
        <!-- /.card-header -->
        <div class="card-body">
            <strong><i class="fas fa-mail-bulk mr-1"></i> Mail</strong>

            <p class="text-muted">
                @Model.Email
            </p>

            <hr>
            <strong><i class="fas fa-phone mr-1"></i> Phone Number</strong>

            <p class="text-muted">
                @Model.PhoneNumber
            </p>

            <hr>

            <strong><i class="fas fa-map-marker-alt mr-1"></i> Working Place</strong>

            <p class="text-muted">@Model.WorkingPlace</p>

            <hr>

            <strong><i class="far fa-file-alt mr-1"></i>Trainer Type</strong>

            <p class="text-muted">
                @Model.Type
            </p>

            <hr>
            <p class="text-muted">
                @Html.ActionLink("Edit", "Edit", null, new { @class = "btn btn-dark" })
                @Html.ActionLink("Back", "Index",null, new { @class = "btn btn-default" })
            </p>
        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.col -->
</div>
