
@{
    ViewBag.Title = "Edit Trainee";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model FPT_Learning_System.Models.ApplicationUser

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Edit", "Trainee", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <hr />
    @Html.ActionLink("Back", "Index")
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-5">
                    @Html.HiddenFor(m => m.Id)
                    @Html.EditorFor(m => m.Email, new { htmlAttributes = new { @class = "form-control", @placeholder = "Email", @required = "required" } })
                </div>
                <div class="col-md-5">
                    @Html.EditorFor(m => m.PhoneNumber, new { htmlAttributes = new { @class = "form-control", @placeholder = "Phone", @required = "required" } })
                </div>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-5">
                    @Html.EditorFor(m => m.FirstName, new { htmlAttributes = new { @class = "form-control", @placeholder = "First Name", @required = "required" } })
                </div>
                <div class="col-md-5">
                    @Html.EditorFor(m => m.LastName, new { htmlAttributes = new { @class = "form-control", @placeholder = "Last Name", @required = "required" } })
                </div>
            </div>
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.DateOfBirth, new { @class = "col-md-2 control-label" })
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-5">
                    
                    @Html.EditorFor(m => m.DateOfBirth, new { htmlAttributes = new { @class = "form-control", @placeholder = "Date Of Birth", @type = "date", @required = "required" } })
                </div>
                <div class="col-md-5">
                    @Html.EditorFor(m => m.ToeicScore, new { htmlAttributes = new { @class = "form-control", @placeholder = "Toeic Score", @type = "number", @required = "required" } })
                </div>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-5">
                    @Html.EditorFor(m => m.Education, new { htmlAttributes = new { @class = "form-control", @placeholder = "Education", @required = "required" } })
                </div>
                <div class="col-md-5">
                    @Html.EditorFor(m => m.MainProgrammingLanguages, new { htmlAttributes = new { @class = "form-control", @placeholder = "Main programming languages", @required = "required" } })
                </div>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-5">
                    @Html.EditorFor(m => m.Location, new { htmlAttributes = new { @class = "form-control", @placeholder = "Location", @required = "required" } })
                </div>
                <div class="col-md-5">
                    @Html.EditorFor(m => m.ExperienceDetails, new { htmlAttributes = new { @class = "form-control", @placeholder = "Experience Details", @required = "required" } })
                </div>
            </div>
        </div>

    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10" style="text-align:right">
            <input type="submit" class="btn btn-success" value="Complete" />
        </div>
    </div>
}


