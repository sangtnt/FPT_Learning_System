@model IEnumerable<FPT_Learning_System.Models.ApplicationUser>

@{
    ViewBag.Title = "List of Trainees";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>
@Html.AntiForgeryToken()
@Html.ValidationSummary("", new { @class = "text-danger" })
<table class="table table-bordered table-borderless">
    <thead class="table-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Avartar)
            </th>
            <th colspan="3">
                @Html.ActionLink("Create", "Create", null, new { @class = "btn btn-block btn-primary" })
            </th>
    </thead>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Email)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.PhoneNumber)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.FirstName)
    </td>
    <td>
        <img src="@item.Avartar" alt="Avartar"  width="100px" height="100px"/>
    </td>
    <td>
        <div class="btn-group btn-block">
            <button type="button" class="btn btn-default dropdown-toggle dropdown-icon" data-toggle="dropdown">
                Actions
            </button>
            <div class="dropdown-menu" role="menu">
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "dropdown-item" })
                @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "dropdown-item" })
                <div class="dropdown-divider"></div>
                @using (Html.BeginForm("Delete", "Trainer", new { Id = item.Id }, FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <button onclick="return confirm('Are you sure to delete')" class="dropdown-item text-danger" type="submit">Delete</button>
                }
            </div>
        </div>
    </td>
</tr>
    }

</table>
